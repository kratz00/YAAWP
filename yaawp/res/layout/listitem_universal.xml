<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="40dip"
    android:orientation="horizontal"
    android:background="#FFDDDDDD"
    android:padding="4dip" >

	<ImageView
 		android:id="@+id/imageViewIconLeft"
 		android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
 		android:layout_gravity="top"
 		android:layout_weight="0"
 		android:gravity="center_vertical"
 		android:scaleType="fitStart"
 		android:src="@drawable/ic_launcher" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:paddingLeft="3dip"
	    android:paddingRight="3dip"
	    android:orientation="vertical" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

			<TextView
			    android:id="@+id/textViewMajorLeft"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			   	android:lines="1"
				android:ellipsize="end"
		    	android:textColor="#ff333333"
		    	android:background="#00000000"
		    	android:textSize="18sp"
		    	android:textStyle="bold" 
			    android:text="TextView" />

			<TextView
			    android:id="@+id/textViewMajorRight"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0"
			    android:background="#00000000"
			    android:ellipsize="none"
			    android:gravity="right"
			    android:lines="1"
			    android:textColor="#ff333333"
			    android:textSize="18sp"
			    android:textStyle="bold"
			    android:text="XXX" />
			
			<ImageView
			    android:id="@+id/imageViewCancelButton"
			    android:layout_width="20dp"
			    android:layout_height="20dp"
			    android:layout_weight="0"
			    android:maxHeight="20dp"
			    android:maxWidth="20dp"
			    android:scaleType="fitCenter"
			    android:src="@android:drawable/ic_menu_close_clear_cancel" />

		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >	
		    	
			<TextView
			    android:id="@+id/textViewMinorLeft"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:ellipsize="none"
			   	android:background="#00000000"
			    android:textColor="#ff555555"
			    android:textSize="12sp"
			    android:text="TextView" />
			
			<TextView
			    android:id="@+id/textViewMinorRight"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0"
			    android:background="#00000000"
			    android:ellipsize="none"
			    android:gravity="right"
			    android:lines="1"
			    android:textColor="#ff333333"
			    android:textSize="12sp"
			    android:text="XXX" />
		
		</LinearLayout>
					
		<include layout="@layout/include_bottom_panel" />
	</LinearLayout>
	
 	<ImageView
 		android:id="@+id/imageViewIconRight"
 		android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
 		android:layout_gravity="top"
 		android:layout_weight="0"
 		android:gravity="center_vertical"
 		android:scaleType="fitStart"
 		android:src="@drawable/ic_launcher" />    
    
</LinearLayout>

