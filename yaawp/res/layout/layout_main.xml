<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout style="@style/PanelTopMain">
		<ImageButton
			android:id="@+id/button_logo"
			style="@style/PanelButton"
            android:src="@drawable/ic_title_logo" />
            
        <ImageView style="@style/SeparatorVertical" />
		<TextView style="@style/TitleText" />
    </LinearLayout>

	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"	    
	     style="@style/MainScreenLine">

		<ListView
		    android:id="@+id/listView1"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:textFilterEnabled="false" >

		</ListView>

	</LinearLayout>	
	
</LinearLayout>
